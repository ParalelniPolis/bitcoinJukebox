{block content}
<div class="tab-content">
	<form n:name="searchForm" class="search">
		<div class="input-group">
        	<input n:name="text" placeholder="NajÃ­t skladby..." class="form-control">
            <span class="input-group-btn">
            	<button n:name="search" class="btn btn-default"><img src="{$basePath}/img/magnifying-glass.png"></button>
            </span>
        </div>
	</form>

	<form n:name="orderForm">
		<input n:name="order" class="btn btn-primary order-button">
		<div class="list-group">
			{foreach $form[genre]->items as $key => $label}
				<div class="list-group-item order-list">
					<label n:name="genre:$key">
						{$label}
						<span class="badge">
							<input n:name="genre:$key">
						</span>
					</label>
				</div>
			{/foreach}

		</div>
	</form>

</div>
{/block}
